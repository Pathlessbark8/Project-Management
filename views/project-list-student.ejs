<!DOCTYPE html>
<html lang="en">
<head>
  <title>Project bank</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
      body{
       background-color: #FD5D5D;
      }
  
      h1 {
        font-weight: 700;
        text-transform: capitalize;
        font-size: 42px;
        margin: 0px;
        color: #fff;
        text-align: center;
        position: relative;
        margin-bottom: 30px;
      }
      .container-wrapper {
      padding: 5em;
      margin: 2em;
      background-color: #FF8080;
  }
    </style>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
  <script type="text/javascript">
    function myFunction(a){
        console.log("iahsd " +a);
        var a;
        $.post("http://localhost:3000/student/project-list",{proj_id:a}).done(function(data){
          if(data.length != 0){
            window.location = '/student/project-list';
          }
        });
        }

  </script>

</head>
<body>
    <div class="container mt-3">
<h2 style="text-align: center;">Project bank</h2>
    <table class="table container-wrapper table-hover">
        <thead>
            <th>S.No</th>
            <th>Project Title</th>
            <th>Type</th>
            <th>Description</th>
            <th>Pre-requisite</th>
            <th>Faculty</th>
            <th>Department</th>
            <th>Apply</th>
        </thead>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
         var name = data.f_name+' '+data.l_name;
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.title %></td>
            <td><%=data.type %></td>
            <td><%=data.description %></td>
            <td><%=data.pre_requisite %></td>
            <td><%=name %></td>
            <td><%=data.dept %></td>
            <!-- <td><%=data.l_name %></td> -->
            <td><button id="<%=data.proj_id%>"  type="button" class="btn btn-danger" value="Apply" onclick="myFunction(<%=data.proj_id%>)">Apply</button></td>
            <!-- <td><a href="/users/delete/<%=data.id%>">Delete</a></td> -->
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
</html>

